<div class="main">

    <div class="container"  style="background-color:white; padding:20px 40px; opacity:0.9">
        <div class="row">

            <div class="span12">

                <div class="widget stacked">

                    <div class="widget-header">
                        <h3>Template</h3>
                    </div> <!-- /widget-header -->

                    <br />

                    <div class="widget-content">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h4>Edit</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.Partial("EditForm")

                                <br />

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <div style="float:left; margin-right:10px">
                                            <input type="submit" class="btn btn-primary" value="Save" />
                                        </div>
                                        <div style="float:left">
                                            <input type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" value="Delete" />
                                        </div>
                                    </div>
                                </div>
                                <br />
                            </div>
                        }

                        <div class="widget-header">
                            <b style="text-align:left; vertical-align:central; text-align; font-size:12px; margin-left:10px">
                                @Html.ActionLink("Back to Template List", "Index")
                            </b>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


