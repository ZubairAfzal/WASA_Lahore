    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href="~/Metronic/assets/pages/css/login-2.min.css" rel="stylesheet" type="text/css" />
</head>

@if (!string.IsNullOrEmpty(Session["UserName"] as string))
{
    Response.Redirect("~/Home/Index");
}
else
{

    <body style="background-image: url('../../Metronic/assets/img/home-background63.jpg');background-repeat:no-repeat;background-size:cover;/* background-position: center center; *//* overflow-x:hidden; *//* overflow-y:hidden; */" data-gr-c-s-loaded="true">
        <div class="col-md-4 col-md-offset-4" style="padding-top: 60px;margin-bottom:50px;z-index: 5;">
            <div style="position: absolute; z-index: -1; top: 0; border-radius:10px; left: 0; right: 0; background-color: #6b899f; opacity: .5; width: 100%; height: 90%; margin-top: 60px;"></div>
            <div style="text-align:center;">
                <img src="/Metronic/assets/img/sticker34_1.png" style="width:100px;">
                <div>
                    <h3 style="color:white;" class="uppercase">WASA Remote Monitoring System</h3>
                </div>
            </div>
            <hr>
            @using (Html.BeginForm("LogOn", "Account"))
            {

                <form>
                    <div class="form-group">
                        <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                        <label class="control-label visible-ie8 visible-ie9">Username</label>
                        <input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" id="userName" name="userName">
                    </div>
                    <div class="form-group">
                        <label class="control-label visible-ie8 visible-ie9">Password</label>
                        <input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" id="password" name="password">
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn blue btn-block uppercase">Login</button>
                    </div>
                    <div class="form-actions" style="padding-top: 20px;">
                        <div class="pull-left">
                            <label class="rememberme mt-checkbox mt-checkbox-outline" style="color:white">
                                <input type="checkbox" name="remember" value="1"> Remember me
                                <span></span>
                            </label>
                        </div>
                        <div class="pull-right forget-password-block">
                            <a href="javascript:;" id="forget-password" class="forget-password" style="color:white">Forgot Password?</a>
                        </div>
                    </div>

                    <div class="form-group">
                        <span style="display:none"><a href="#" style="color:white">Forgot Password?</a></span>
                    </div>
                    <footer class="page-footer">


                        <br />
                        <!-- Copyright -->
                        <div class="footer-copyright text-center py-3" style="color:white;margin-top: 30px;">
                            © @(DateTime.Now.Year) Copyright:
                            <a href="http://www.imalengineering.com" style="color:white"> iMAL Engineering</a>
                        </div>
                        <!-- Copyright -->

                    </footer>
                </form>
            }
        </div>
        <script src="../Metronic/assets/global/plugins/respond.min.js"></script>
        <script src="../Metronic/assets/global/plugins/excanvas.min.js"></script>
        <script src="../Metronic/assets/global/plugins/ie8.fix.min.js"></script>
        <!--[endif]---->
        <!-- BEGIN CORE PLUGINS -->
        <script src="/Metronic/assets/global/plugins/jquery.min.js" type="text/javascript"></script>
        <script src="/Metronic/assets/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
        <script src="/Metronic/assets/global/plugins/js.cookie.min.js" type="text/javascript"></script>
        <script src="/Metronic/assets/global/plugins/jquery-slimscroll/jquery.slimscroll.min.js" type="text/javascript"></script>
        <script src="/Metronic/assets/global/plugins/jquery.blockui.min.js" type="text/javascript"></script>
        <script src="/Metronic/assets/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js" type="text/javascript"></script>
        <!-- END CORE PLUGINS -->
        <!-- BEGIN PAGE LEVEL PLUGINS -->
        <script src="/Metronic/assets/global/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>
        <script src="/Metronic/assets/global/plugins/jquery-validation/js/additional-methods.min.js" type="text/javascript"></script>
        <script src="/Metronic/assets/global/plugins/select2/js/select2.full.min.js" type="text/javascript"></script>
        <!-- END PAGE LEVEL PLUGINS -->
        <!-- BEGIN THEME GLOBAL SCRIPTS -->
        <script src="/Metronic/assets/global/scripts/app.min.js" type="text/javascript"></script>
        <!-- END THEME GLOBAL SCRIPTS -->
        <!-- BEGIN PAGE LEVEL SCRIPTS -->
        <script src="/Metronic/assets/pages/scripts/login.min.js" type="text/javascript"></script>
        <!-- END PAGE LEVEL SCRIPTS -->
        <!-- BEGIN THEME LAYOUT SCRIPTS -->
        <!-- END THEME LAYOUT SCRIPTS -->
        <script>
            $(document).ready(function () {
                $('#clickmewow').click(function () {
                    $('#radio1003').attr('checked', 'checked');
                });
            })
        </script>



    </body>
}
</html>

