@model System.Data.DataTable
@using System.Data;

@{
    ViewBag.Title = "";
    Layout = "";
}

<style>
    .modal-backdrop {
        position: static !important;
    }

    .btnMasterOn {
        border: 6px solid #00d873;
        background: #16ac62;
        width: 160px;
        height: 160px;
        overflow: hidden;
        display: block;
        float: left;
        margin-right: 142px;
        line-height: 30px !important;
        text-align: center;
        font-weight: bolder;
        border-radius: 50% !important;
        color: white;
        font-size: large;
    }

    .btnMasterOff {
        border: 6px solid #942124;
        background: #fb1d20;
        width: 160px;
        height: 160px;
        overflow: hidden;
        display: block;
        float: left;
        margin-right: 56px;
        line-height: 18px;
        text-align: center;
        font-weight: bolder;
        border-radius: 50% !important;
        color: white;
        font-size: large;
    }
    .buttonsDiv {
        position: relative;
        z-index: 10000;
        right: 0px;
        top: 0;
        color: red;
        transform: scale(0.9) translate(341px, 407px);
        font-size: 10px;
    }
</style>

<script>
    $(function () {
        $('#modalCloseOFFCross').on('click', function () {
            $('#myModal').hide();
        })
    })
</script>
<script>
    $(function () {
        $('#modalCloseOFFCancle').on('click', function () {
            $('#myModal').hide();
        })
    })
</script>
<script>
    $(function () {
        $('#modalCloseOnCross').on('click', function () {
            $('#myModalON').hide();
        })
    })
</script>
<script>
    $(function () {
        $('#modalCloseOnCancle').on('click', function () {
            $('#myModalON').hide();
        })
    })
</script>

<div class="container" style="position: relative; min-width: 1140px; min-height: 712px; max-height: 712px; overflow: hidden;">
    <div class="col-md-12" style="padding-left: 0px;  padding-right: 0px;">
        <img src="~/Content/images/InaugurationSwitch.jpg" class="img-responsive" style="position: absolute !important;">
    </div>
    <div class="buttonsDiv">
        <input class="fas fa-power-off btnMasterOn" type="button" value="Master ON" onclick="location.href='@Url.Action("MasterOn", "Switch")'" />
        <input class="fas fa-power-off btnMasterOff" type="button" value="Master OFF" onclick="location.href='@Url.Action("MasterOff", "Switch")'" />
    </div>
</div>

