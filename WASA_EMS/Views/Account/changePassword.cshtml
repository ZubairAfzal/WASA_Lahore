@{
    ViewBag.Title = "Account | Change Password";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" type="text/css" />
<link href="~/Content/Site.css" rel="stylesheet" />


<div class="col-md-12">
    <!-- BEGIN EXAMPLE TABLE PORTLET-->
    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption font-dark">
                <i class="icon-key font-dark"></i>
                <span class="caption-subject bold uppercase font-dark">Change Password</span>
            </div>
        </div>
        <div class="portlet-body">
            @using (Html.BeginForm("ChangePassword", "Account"))
            {
                <table style="padding:10px">
                    <tr style="padding:10px">
                        <td style="padding:10px">
                            <div class="field">
                                <label for="username">Current Password</label>
                            </div>
                        </td>
                        <td style="padding:10px">
                            <div class="field">
                                <input type="password" id="currentPassword" name="currentPassword" value="" placeholder="Current Password" class="form-control" />
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding:10px">
                            <div class="field">
                                <label for="password">New Password</label>
                            </div>
                        </td>
                        <td style="padding:10px">
                            <div class="field">
                                <input type="password" id="newPassword" name="newPassword" value="" placeholder="New Password" class="form-control" />
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding:10px">
                            <div class="field">
                                <label for="password">Confirm Password</label>
                            </div>
                        </td>
                        <td style="padding:10px">
                            <div class="field">
                                <input type="password" id="confirmNewPassword" name="confirmNewPassword" value="" placeholder="Confirm New Password" class="form-control" />
                            </div>
                        </td>
                    </tr>   
                    <tr>
                        <td colspan="2" style="padding:10px">
                            <center>
                                <div class="login-actions">
                                    <button class="btn btn-lg" style="background-color: #234285;color: white;">Submit</button>
                                </div>
                            </center>
                        </td>
                    </tr>
                </table>
            }
        </div>
    </div>
</div>